<script>
    $('#drejtimet').change(function(e) {
        e.preventDefault();
        var dataString = $('#drejtimet').serialize();
        $.ajax({
            type: "POST",
            url: "../admin/ajax/drejtimet",
            data: dataString,
            success: function(data) {
                console.log(data);
                $('.succesupd').modal('show');
                $('#lendet').empty().append(data);
            }
        },
        "json");
    });</script>
