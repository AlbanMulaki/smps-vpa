<?php $__env->startSection('scripts'); ?>

    $(document).on('change', '#drejtimi', function ($element) {
        var drejtimi = $("#drejtimi").val();
        if (drejtimi >= 1) {

            window.location.href = "<?php echo action('StudentController@getList'); ?>/" + drejtimi;

        }
    });

