            <?php else: ?> 
            <?php echo $__env->make('admin.provimet.partial.list_of_student_report_locked',array('$raportiNotave'=>$raporti->raportiNotaveStudent), array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>
            <?php endif; ?>
