            <div class="panel-body">
                <?php echo Session::get('notification'); ?>

                <?php echo Form::open(array('url'=>action('VijushmeriaController@postVijushmeria'),'method'=>'POST','class'=>'form-horizontal')); ?>

                <?php echo Form::model('test'); ?>

                <div>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon"><?php echo Lang::get('general.course'); ?></div>
                            <?php echo Form::select('drejtimi',$drejtimet,current($drejtimet),array('class'=>'form-control','id'=>'drejtimi')); ?>


                            <div id='crsajx'> <?php echo Form::select('crs',array(''),null,array('class'=>'form-control','id'=>'crs','disabled')); ?>


                            </div>
                        </div>
                    </div>


                    <div class="form-group" id='studenti'>

                        <div class="input-group">
                            <div class="input-group-addon" id='idlast'>0</div>
