<script>
    $("#search").keyup(function () {
        var dataString = $('#form1search').serialize();
        $.ajax({
            type: "POST",
            url: "/smps/admin/search",
            data: dataString,
            error: function () {
                alert('Something went go wrong');
            },
            success: function (data) {
                console.log(data);
                $('#listpeople').empty().append(data);

            }},
        "json");
    });
</script>
