                <h4 class="modal-title"> <?php echo Lang::get('general.success'); ?></h4>
            </div>
            <div class="modal-body">
                <div id="preview"></div>
            </div>
            <div class="modal-footer">
                <input type="button" id="but2" class="btn btn-primary" name="send" value="<?php echo Lang::get('general.confirm'); ?>" data-dismiss="modal" />
                <input type="button" class="btn btn-default" value="<?php echo Lang::get('general.close'); ?>" id="verifyClose">
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<script>

    $('#verifyClose').click(function () {
        $('#confirm_student').modal('hide');
    });
    $('#but2').click(function () {
        $('#form1').submit();
    });
    // Request data for verification
    $('#confirm_student_data').click(function (e) {
        e.preventDefault();
        var dataString = $('form').serialize();
        $.ajax({
            type: "GET",
            url: "<?php echo action('AdminStudentController@getRegisterVerification'); ?>",
            data: dataString,
            success: function (data) {
                console.log(data);
                $('#preview').empty().append(data);
                $('.confirm').modal('show');
            }},
        "json");

    });


</script>
