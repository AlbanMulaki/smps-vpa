<div id="msg"></div>

<div class="progress" >
    <div class="progress-bar" id="processing" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100">
    </div>
</div>
<script>

    $(function() {
        $('#tabmenu a:last').tab('show')
    });
    $('#form2notimet').submit(function(e) {
        e.preventDefault();
        var dataString = $('#form2notimet').serialize();
        $.ajax({
            type: "GET",
            url: "../<?php echo $profile['uid']; ?>/",
            data: dataString,
            success: function(data) {
                console.log(data);
                $('#msg').empty().append(data);
                $('#msgsuccess').modal('show');
                $('button').click(function() {
                    location.reload(true);
                });
            }},
        "json");
    });
    $('#print_transkript').click(function(e) {
        $({property: 0}).animate({property: 105}, {
            duration: 1000,
            step: function() {
                var _percent = Math.round(this.property);
                $('#processing').empty().css('width', _percent + "%").append(_percent - 5 + '%');
                if (_percent == 105) {
                    $("#processing").addClass("progress-bar-warning");
                }
            },
            complete: function() {

                $("#processing").removeClass('progress-bar-warning').addClass("progress-bar-success");
            }
        });
        e.preventDefault();
        $.ajax({
            type: "GET",
            url: "print",
            success: function(data) {
                console.log(data);
                window.location = 'print';
            }},
        "json");
    });



    $('#print_pagesa').click(function(e) {
        e.preventDefault();
                var urlsite = "pagesa/print?uid=" + <?php echo $profile['uid']; ?>;
            $.ajax({
            type: "GET",
                    url: urlsite,
                    success: function(data) {
                        console.log(data);
                        window.location = urlsite;
                    }},
                    "json");
    });
            // Default pershkrimi ose tjeter
            $('#checkbox-pagesa').click(function() {
        if ($('#decbill').attr('disabled') !== "disabled") {
            $('#decbill').attr('disabled', 'disabled').css('color', 'red');
        } else {
            $('#decbill').removeAttr('disabled').css('color', '');
        }
    });


    //Regjistrimi pageses
    $('#form3pagesa').submit(function(e) {
        e.preventDefault();
        var dataString = $('#form3pagesa').serialize();
        $.ajax({
            type: "POST",
            url: "pagesa",
            data: dataString,
            success: function(data) {
                console.log(data);
                $('#msg').empty().append(data);
                $('#msgsuccess').modal('show');
                $('button').click(function() {
                    location.reload(true);
                });
            }},
        "json");
    });
</script>
