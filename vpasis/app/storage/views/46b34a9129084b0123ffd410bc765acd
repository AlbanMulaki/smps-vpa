<script>
    $(document).ready(function() {
        $('#form1').submit(function(e) {

            e.preventDefault();
            var dataString = $('form').serialize();
            $.ajax({
                type: "PUT",
                url: "",
                data: dataString,
                success: function(data) {
                    console.log(data);
                    $('.succesupd').modal('show');
                }},
            "json");

        });
    });
</script>
